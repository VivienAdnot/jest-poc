import { doAdd, doSubtract } from '../src/app';
import { add, subtract } from '../src/math';

//below is the most basic and less common type of mocking

add = jest.fn();
subtract = jest.fn();

test('calls add', () => {
    doAdd(1, 2);
    expect(add).toHaveBeenCalledWith(1, 2);
});

test('calls subtract', () => {
    doSubtract(1, 2);
    expect(subtract).toHaveBeenCalledWith(1, 2);
});